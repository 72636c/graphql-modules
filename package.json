{
  "private": true,
  "repository": "https://github.com/Urigo/graphql-modules.git",
  "author": "dotansimha <dotansimha@gmail.com>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*/",
      "examples/*/"
    ]
  },
  "scripts": {
    "version": "docusaurus-version",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:api-docs": "typedoc --module commonjs --ignoreCompilerErrors --mode file --theme markdown --out ./docs/api/ ./packages",
    "lint": "lerna run lint",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "release": "lerna publish --exact --force-publish=\"*\"",
    "release:canary": "lerna publish --force-publish=\"*\" --canary --exact",
    "deploy-website": "yarn build:api-docs && cd website && yarn && yarn build"
  },
  "devDependencies": {
    "@types/graphql": "0.13.4",
    "@types/jest": "23.3.2",
    "graphql": "14.0.0",
    "jest": "23.5.0",
    "lerna": "3.2.1",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.6",
    "typedoc": "0.12.0",
    "typedoc-plugin-docusaurus": "1.0.14"
  },
  "publishConfig": {
    "access": "public"
  }
}
