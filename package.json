{
  "private": true,
  "repository": "https://github.com/Urigo/graphql-modules.git",
  "author": "dotansimha <dotansimha@gmail.com>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*/",
      "examples/*/"
    ]
  },
  "scripts": {
    "version": "docusaurus-version",
    "test": "lerna run test",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "release": "lerna publish --exact --force-publish=\"*\"",
    "release:canary": "lerna publish --force-publish=\"*\" --canary --exact",
    "deploy-website": "cd website && yarn && yarn build && yarn publish-gh-pages"
  },
  "devDependencies": {
    "@types/graphql": "14.0.0",
    "@types/jest": "23.3.2",
    "graphql": "14.0.2",
    "jest": "23.6.0",
    "lerna": "3.3.0",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
